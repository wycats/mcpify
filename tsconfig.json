{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "packages/*/src/**/*.ts",
    "reset.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}