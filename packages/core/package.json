{
  "name": "@mcpify/core",
  "version": "0.1.0",
  "description": "A dynamic proxy that converts OpenAPI endpoints into MCP tools on the fly",
  "type": "module",
  "exports": {
    ".": "./src/main.ts",
    "./test": "./src/test/index.ts"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc",
    "start": "node --experimental-strip-types dist/main.js",
    "preview": "vite preview",
    "cli": "node --experimental-strip-types src/main.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:strict": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "check": "pnpm lint && pnpm format:check",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/express": "^5.0.1",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^22.15.2",
    "@types/qs": "^6.9.18",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "vite": "^6.3.3"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^12.0.1",
    "@commander-js/extra-typings": "^13.1.0",
    "@modelcontextprotocol/sdk": "^1.11.2",
    "@readme/httpsnippet": "^11.0.0",
    "@readme/oas-to-har": "^26.0.0",
    "@readme/openapi-parser": "^4.0.0",
    "allof-merge": "^0.6.6",
    "axios": "^1.9.0",
    "commander": "^13.1.0",
    "express": "^5.1.0",
    "fetch-har": "^11.1.1",
    "loglayer": "^6.3.3",
    "oas": "^27.0.0",
    "oas-normalize": "^14.0.0",
    "openapi-types": "^12.1.3",
    "qs": "^6.14.0",
    "url-template": "^3.1.1",
    "zod": "^3.24.3",
    "zod-from-json-schema": "^0.0.5",
    "zod-to-json-schema": "^3.24.5"
  }
}
